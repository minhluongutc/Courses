<div class='mt-4'>
    <h3>Cập nhật khóa học</h3>
    <form
        class='mt-4'
        method='POST'
        action='/example/{{example._id}}?_method=PUT'
    >
        <div class='form-group'>
            <label for='exName'>Tên bài học</label>
            <input
                class='form-control'
                value='{{example.exName}}'
                id='exName'
                name='exName'
            />
        </div>
        <div class='form-group'>
            <label for='time'>Thời gian</label>
            <input
                class='form-control'
                id='time'
                name='time'
                value="{{example.time}}"
            />
        </div>
        <div class='form-group'>
            <label for='videoId'>videoId</label>
            <input
                class='form-control'
                id='videoId'
                name='videoId'
                value="{{example.videoId}}"
            />
        </div>

        <button type='submit' class='btn btn-primary'>Lưu Lại</button>
    </form>
</div>