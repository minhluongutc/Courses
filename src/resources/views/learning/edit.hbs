<div class='mt-4'>
    <h3>Cập nhật khóa học</h3>
    <form
        class='mt-4'
        method='POST'
        action='/learning/{{learning._id}}?_method=PUT'
    >
        <div class='form-group'>
            <label for='learning'>Tên khóa học</label>
            <input
                class='form-control'
                value='{{learning.nameCourse}}'
                id='learning'
                name='learning'
            />
        </div>
        {{#each learning.unitId}}
        <div class='form-group'>
            <label for='unitId'>unitId</label>
            <input
                class='form-control'
                id='unitId'
                name='unitId'
                value="{{this}}"
            />
        </div>
        {{/each}}

        <button type='submit' class='btn btn-primary'>Lưu Lại</button>
    </form>
</div>