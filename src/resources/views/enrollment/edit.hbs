<div class='mt-4'>
    <h3>Cập nhật khóa học</h3>
    <form
        class='mt-4'
        method='POST'
        action='/enrollment/{{enrollment._id}}?_method=PUT'
    >
        <div class='form-group'>
            <label for='accountId'>AccountId</label>
            <input
                class='form-control'
                value='{{enrollment.accountId}}'
                id='accountId'
                name='accountId'
            />
        </div>
        <div class='form-group'>
            <label for='courseId'>CourseId</label>
            <input
                class='form-control'
                id='courseId'
                name='courseId'
                value="{{enrollment.courseId}}"
            />
        </div>
        

        <button type='submit' class='btn btn-primary'>Lưu Lại</button>
    </form>
</div>